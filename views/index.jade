extends layout

block content
    h1= title
    p Welcome to our test

    // Wrapper
    #wrapper

        // USER INFO
        #userInfo
            h2 User Info
            p
                strong Name:
                |  <span id='userInfoName'></span>
                br
                strong Age:
                |  <span id='userInfoAge'></span>
                br
                strong Gender:
                |  <span id='userInfoGender'></span>
                br
                strong Location:
                |  <span id='userInfoLocation'></span>
        // /USER INFO

        // USER LIST
        h2 User List
        #userList
            table
                thead
                    th UserName
                    th Email
                    th Delete?
                tbody
        // /USER LIST

        // ADD USER
        h2 Add User
        #addUser
            fieldset
                input#inputUserName(type='text', placeholder='Username')
                input#inputUserEmail(type='text', placeholder='Email')
                br
                input#inputUserFullname(type='text', placeholder='Full Name')
                input#inputUserAge(type='text', placeholder='Age')
                br
                input#inputUserLocation(type='text', placeholder='Location')
                input#inputUserGender(type='text', placeholder='gender')
                br
                button#btnAddUser Add User
        // /ADD USER
        br
        br
        //SHOW FILES
        h2 File List
        #fileList
            table
                thead
                   th File Name
                   th Download
                   th Delete?
                    form(method="post", action="/files/delete/:name", enctype='multipart/form-data')
                    br
                    input(type="file", name="image", id="image" size=1000000)
                    br
                    input(type="submit", value="Delete", class="button-style")
                    br
                    br
                tbody
        //SHOW FILES
        //UPLOAD FILES
        form(method="post", action="/files/upload", enctype='multipart/form-data')
            br
            input(type="file", name="image", id="image" size=1000000)
            br
            input(type="submit", value="Upload", class="button-style")
            br
            span#message

        //UPLOAD FILES
        
    // /WRAPPER